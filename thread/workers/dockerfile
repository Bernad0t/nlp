# Этап сборки
FROM rust:latest as builder

WORKDIR /app

# Создаем проект
RUN cargo new --bin threadpool
WORKDIR /app/threadpool

# Копируем зависимости
COPY Cargo.toml .
# Создаем фиктивный main.rs для кеширования зависимостей
RUN echo 'fn main() {}' > src/main.rs
RUN cargo build --release

# Копируем реальный исходный код
COPY src ./src
# Пересобираем с реальным кодом
RUN touch src/main.rs
RUN cargo build --release

# Этап выполнения
FROM debian:bookworm-slim

# Устанавливаем зависимости для Rust программы
RUN apt-get update && apt-get install -y \
    libc6 \
    && rm -rf /var/lib/apt/lists/*

# Копируем бинарник из этапа сборки
COPY --from=builder /app/threadpool/target/release/threadpool /usr/local/bin/

# Запускаем программу
CMD ["threadpool"]